{
	"name": "Smart Fill Form",
	"version": "3.0",
	"manifest_version": 3,
	"description": "Auto fill form base on input type, name,...",
	"icons": { 
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png" 
	},
	"action": {
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches" : [
				"http://*/*",
				"https://*/*"
			],
			"js": ["libs/jquery-3.6.0.min.js", "libs/faker-3.1.0.js"]
		}
	],
	"background": { "service_worker": "background.js" },
	"permissions": [
	 	"clipboardWrite",
		"activeTab",
		"notifications",
		"contextMenus",
		"storage",
		"scripting"
	]
}
